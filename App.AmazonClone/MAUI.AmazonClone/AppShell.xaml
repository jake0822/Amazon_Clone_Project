<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.AmazonClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.AmazonClone"
    xmlns:local2="clr-namespace:MAUI.AmazonClone.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI.AmazonClone">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Customer"
        ContentTemplate="{DataTemplate local2:CustomerView}"
        Route="Customer" />

    <ShellContent
        Title="Inventory Manager"
        ContentTemplate="{DataTemplate local2:InventoryManagerView}"
        Route="Inventory" />
    <ShellContent
    Title="Item Manager"
    ContentTemplate="{DataTemplate local2:ItemView}"
    Route="Item" />

</Shell>
